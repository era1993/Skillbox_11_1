<UserControl x:Class="EntertpriseIS.uiPositionSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EntertpriseIS"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Управляющий" Grid.Column="0" x:Name="btnPositionManager" Click="btnPosition_Click"/>
        <Button Content="Интерн" Grid.Column="1" x:Name="btnPositionIntern" Click="btnPosition_Click"/>
        <Button Content="Рабочий" Grid.Column="2" x:Name="btnPositionWorkman" Click="btnPosition_Click"/>
    </Grid>
</UserControl>
