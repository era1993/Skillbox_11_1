<UserControl x:Class="EntertpriseIS.InternPositionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:local="clr-namespace:EntertpriseIS"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" DataContext="{Binding Path=Position}">
        <TextBox Text="{Binding Path=Description, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                 Margin="5,0" Width="200"
                metro:TextBoxHelper.UseFloatingWatermark="True"
                metro:TextBoxHelper.Watermark="Наименование должности"/>
        <local:DepartmentPositionControl Margin="5,0"/>
        <TextBox Text="{Binding Path=FixedPayment, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                 Margin="5,0"
                metro:TextBoxHelper.UseFloatingWatermark="True"
                metro:TextBoxHelper.Watermark="Фиксированная зарплата"/>
    </StackPanel>
</UserControl>
