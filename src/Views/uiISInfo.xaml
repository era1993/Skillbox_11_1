<metro:MetroTabItem x:Class="EntertpriseIS.uiISInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EntertpriseIS"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
                    Header="Организация">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox Text="{Binding Path=Name, UpdateSourceTrigger=LostFocus, Mode=TwoWay}"
                     metro:TextBoxHelper.UseFloatingWatermark="True"
                     metro:TextBoxHelper.Watermark="Наименование организации"/>
        </StackPanel>
    </Grid>
</metro:MetroTabItem>
